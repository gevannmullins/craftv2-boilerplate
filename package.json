{
  "name": "craft-starter-kit",
  "version": "1.0.0",
  "description": "This is a starter kit for building websites with Craft CMS. Please refer to https://craftcms.com/docs for more info on the CMS.",
  "private": true,
  "main": "public/index.php",
  "scripts": {
    "setup": "yarn",
    "start": "cross-env NODE_ENV=development babel-node -- ./node_modules/.bin/webpack --config ./webpack.config.js --progress",
    "build": "cross-env NODE_ENV=production babel-node -- ./node_modules/.bin/webpack --config ./webpack.config.js --progress",
    "lint": "eslint . --ext .js --cache",
    "stylelint": "stylelint 'public/styles/**/*.scss'",
    "test": "echo \"This project does not have any tests which can be run yet...\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/responsivestudio/craft-starter-kit.git"
  },
  "author": "Responsive Digital Innovation",
  "license": "ISC",
  "homepage": "https://bitbucket.org/responsivestudio/craft-starter-kit#readme",
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "node-sass": "^4.1.0",
    "sass-loader": "^4.1.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "stylelint-webpack-plugin": "^0.4.2",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-livereload-plugin": "^0.9.0",
    "webpack-merge": "^1.1.2",
    "webpack-validator": "^2.3.0"
  }
